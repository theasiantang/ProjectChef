<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MyRecipeImageView"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/MyRecipeImageView"
        android:layout_alignStart="@+id/MyRecipeImageView"
        android:layout_alignTop="@+id/MyRecipeImageView"
        android:layout_alignRight="@+id/MyRecipeImageView"
        android:layout_alignEnd="@+id/MyRecipeImageView"
        android:layout_alignBottom="@+id/MyRecipeImageView"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="26sp"
        android:backgroundTint="@color/green"
        android:backgroundTintMode="screen"
        android:text="My Recipe"
        android:id="@+id/MyRecipeTitleView" />
</RelativeLayout>